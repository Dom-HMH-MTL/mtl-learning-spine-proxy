{
    "extends": ["tslint:recommended"],
    "rules": {
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "max-line-length": false,
        "no-console": true,
        "object-literal-key-quotes": false,
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "ignore",
                    "arrays": "ignore",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ]
    }
}
